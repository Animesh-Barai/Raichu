<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferencesTheme</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ImageView">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PreferencesTheme">
        <item name="android:background">@color/midnightBlue</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">#99C9D6DF</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <item name="searchBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>
    </style>
</resources>
